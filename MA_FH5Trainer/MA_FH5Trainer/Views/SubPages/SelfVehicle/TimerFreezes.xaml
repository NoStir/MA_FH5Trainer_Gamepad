<Page x:Class="MA_FH5Trainer.Views.SubPages.SelfVehicle.TimerFreezes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MA_FH5Trainer.Views.SubPages.SelfVehicle"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance local:TimerFreezes, IsDesignTimeCreatable=True}"
      d:DesignHeight="Auto" d:DesignWidth="800"
      Title="TimerFreezes">


    <StackPanel>
        <Border Style="{StaticResource CommonBorderStyle}">
            <StackPanel Margin="5 0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <mah:ToggleSwitch VerticalAlignment="Center"
                                  MinWidth="0"
                                  FontSize="12"
                                  Content="Race Timer Freeze"
                                  Toggled="ToggleSwitch_Toggled"
                                  ContentPadding="-5 0 0 0"/>

                <mah:ToggleSwitch VerticalAlignment="Center"
                                  MinWidth="0"
                                  FontSize="12"
                                  Margin="8 0"
                                  Toggled="ToggleSwitch_Toggled_1"
                                  Content="Trailblazer Timer Freeze"
                                  ContentPadding="-5 0 0 0"/>
                
                <mah:ToggleSwitch VerticalAlignment="Center"
                                  MinWidth="0"
                                  FontSize="12"
                                  Toggled="ToggleSwitch_Toggled_2"
                                  Content="Mission Timer Freeze"
                                  ContentPadding="-5 0 0 0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
